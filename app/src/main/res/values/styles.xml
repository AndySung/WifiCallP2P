<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="DialtactsDialpadNumButtonStyle" parent="@style/DialpadButtonStyleBase">
        <item name="android:background">@drawable/dial_num_bg_selector</item>
    </style>

    <style name="DialpadButtonStyleBase">
        <item name="android:layout_width">@dimen/dial_btn_width</item>
        <item name="android:layout_height">@dimen/dial_btn_height</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:soundEffectsEnabled">false</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="label_style">
        <item name="android:textColor">@color/label_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title_style">
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="summary_style">
        <item name="android:textColor">@color/summary_text_color</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>